@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>MostrarDatosCompletos</title>
    <link type="text/css" rel="Stylesheet" href="/Content/Site.css"/>
</head>
<body>
    <div id="DetalleUsuarios">
        <table border="2" style="width: 100%">
            <thead style="background-color: #99ADEB;">
                <tr>
                    <td>D.N.I. nº</td>
                    <td>Nombre</td>
                    <td>Apellido</td>
                    <td>Fecha de nacimiento</td>
                    <td>Domicilio</td>
                    <td>Localidad</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @ViewBag.Listado) {
                    <tr>
                        <td>@item.dni</td>
                        <td>@item.nombre </td>
                        <td>@item.apellido </td>
                        <td>@item.fecha_nacimiento </td>
                        <td>@item.domicilio </td>
                        <td>@item.localidad </td>
                    </tr>
                }
            </tbody>
        </table>    
    </div>

    <div>
        <a href="Index">Volver a inicio</a>
    </div>
</body>
</html>
